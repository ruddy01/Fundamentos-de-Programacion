#include "stdafx.h"
#include <iostream>
#include<conio.h>
#include<math.h>

using namespace std;
void  main ()
{

float a,b,c,d,x,x1,x2;




cout<<"digite a,b,c"<<endl;
cin>>a>>b>>c;


if(a!=0)
  { d=b*b-(4*a*c); // con pow: pow(b,2)-4*a*c
    if(d>0)
		{x1=(-b+sqrt(d))/(2*a); 
         x2=(-b-sqrt(d))/(2*a);    
         cout<<"x1:"<<x1<<endl;
         cout<<"x2:"<<x2<<endl;
        }
	else
	    { if(d==0)
	        {cout<<"solucion unica:"<<(-b)/(2*a);
	        }
		  else
		    {cout<<"solucion imaginaria";
	        }
	    }
  }


getch ();
